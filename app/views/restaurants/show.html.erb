                  <% end %>
                  <%= form_with model: order do |f| %>
                    <%= f.hidden_field :status, value: "accepter" %>
                    <%= f.submit value: "V", class: 'btn btn-primary rounded-circle' %>
                  <% end %>
                </div>
              </div>
              <hr class = "my-hr">
            <% end %>
          <% end %>
          <div class="d-flex justify-content-end">
            <p>ALL</p>
            <div class="d-flex " style="  margin-left: 10px;">
