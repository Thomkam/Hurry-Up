<div class="py-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @restaurant.image.key, height: 300, crop: :fill %>'); background size: cover; background-position: center;">
  <h1 class="text-white ps-3">  <%= link_to "#{ @restaurant.name}", sitting_area_path(@sitting_areas.first) %></h1>
</div>

<div class= "container">
  <div class="">
    <% @sitting_areas.each do |sitting_area| %>
      <% unless sitting_area.orders.where(status: "en attente").empty? %>
        <div>
          <div class="order_card px-10">
            <%= link_to sitting_area_path(sitting_area), class: "text-decoration-none text-black" do  %>
              <p>table <%=sitting_area.sitting_area_number%>
            <% end %>
            <div class="mx-5" style="">
              <% sitting_area.orders.each do |order|%>
                <% if order.status == "en attente" %>
                  <div class="d-flex justify-content-between " style="">
                    <p><%=order.item.name%> x<%=order.quantity%></p>
                    <p>time</p>
                    <%= order.status %>
                    <div class="d-flex justify-content-between">
                      <%= form_with model: order do |f| %>
                        <%= f.hidden_field :status, value:"accepter" %>
                        <%= f.submit value:"v" %>
                      <% end %>
                      <%= form_with model: order do |f| %>
                        <%= f.hidden_field :status, value:"refuser" %>
                        <%= f.submit value:"x" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="badge bg-secondary"><%= order.status %></div>
        </div>
        <div class="d-flex justify-content-end mt-2 mx-5 p-1 ddzd">
        </div>
      <% end %>
    <% end %>
  </div>
</div>
